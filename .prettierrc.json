{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "importOrder": [
    "^(react(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "^(formik(.*)$)|^(formik$)",
    "^(uuid(.*)$)|^(uuid$)",
    "^(chakra-ui/(.*)$)|^(chakra-ui$)",
    "<THIRD_PARTY_MODULES>",
    "^@/pages/(.*)$",
    "^@/layout/(.*)$",
    "^@/components/(.*)$",
    "^@/ui/(.*)$",
    "^@/assets/(.*)$",
    "^@/storage/(.*)$",
    "^@/public/(.*)$",
    "^@/locales/(.*)$",
    "^@/hooks/(.*)$",
    "^@/services/(.*)$",
    "^@/api/(.*)$",
    "^@/styles/(.*)$",
    "^../(.*)",
    "^./(.*)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
